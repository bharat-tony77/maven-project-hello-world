pipeline {
    agent any
    stages {
        stage("build") {
            steps{
                sh "mvn clean install"
            }
        }
        stage("Infra_provisioning") {
            steps{
                sh "cd /terraform"
                sh "terraform plan"
            }
        }
        stage("post_build") {
            steps{
                echo 'Running terraform commands'
                echo 'Deploy docker images to target server'
            }
        }
    }
}
